{
	"version": "2.0.0",
    "tasks": [
        {
			"label": "cmake",
			"type": "shell",
			"options": {
				"cwd": "${workspaceRoot}/build"
			},
			"command": "cmake --build ${workspaceRoot}/build --config Release --target all -j 8 --",
		},
		{
			"type":"shell",
			"label": "run executable",
			"command": "${workspaceRoot}/build/FBXTest.exe",
			"dependsOn":["cmake"],
			"dependsOrder": "sequence",
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
    ]
}